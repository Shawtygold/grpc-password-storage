<Window x:Class="PasswordsBunker.MVVM.View.Forms.Messagebox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:PasswordsBunker.MVVM.ViewModel.FormsViewModel"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordsBunker.MVVM.View.Forms"
        mc:Ignorable="d"
        Title="Messagebox" 
        Height="160"
        Width="225"
        RenderOptions.BitmapScalingMode="HighQuality"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Name="MessageForm">

    <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
            BorderBrush="#3C3C3C"
            BorderThickness="1"
            CornerRadius="8">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ui:TitleBar Grid.Row="0"
                         ShowMaximize="False"
                         CanMaximize="False"/>

            <TextBlock Grid.Row="1"
                       MaxWidth="200"
                       TextWrapping="Wrap"
                       Text="{Binding Message}"
                       FontSize="12"
                       FontFamily="SegoeFluentIcon"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Border Grid.Row="2" 
                    Height="40"
                    Background="#2B2B2B">

                <Button HorizontalAlignment="Right"
                        Content="Ok"
                        FontSize="9"
                        Width="70"
                        Margin="0,0,10,0"
                        Command="{Binding OkCommand}"
                        CommandParameter="{Binding ElementName=MessageForm}"/>
            </Border>
        </Grid>
    </Border>
</Window>
